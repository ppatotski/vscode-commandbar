{
  "env": {
    "browser": false,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "rules": {
    "indent": ["warn", "space", { "SwitchCase": 1, "MemberExpression": 1 }],
    "no-const-assign": "warn",
    "no-this-before-super": "warn",
    "no-undef": "warn",
    "no-unreachable": "warn",
    "no-unused-vars": "warn",
    "no-tabs": "off",
    "padded-blocks": "off",
    "constructor-super": "warn",
    "valid-typeof": "warn"
  }
}
